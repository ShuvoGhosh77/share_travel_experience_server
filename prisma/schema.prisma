generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Posts {
  id              String   @id @default(uuid())
  PostTitle       String
  PostDescription String
  PostImage       String
  PostDate        String
  AuthorImage     String
  AuthorName      String
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  Comment Comment[]

  @@map("posts")
}

model Comment {
  id         String  @id @default(uuid())
  Name       String
  Email      String
  Comments   String
  PostId     String
  Post       Posts   @relation(fields: [PostId], references: [id])

  @@map("comment")
}

model User {
  id       String @id @default(uuid())
  Email    String @unique
  Role     String
  password String

  @@map("user")
}



enum PostCatagory {
  Single
  Double
  Deluxe
  Honeymoon_Package
  Family_Package
}
